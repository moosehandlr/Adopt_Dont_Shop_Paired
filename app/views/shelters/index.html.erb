<html lang="en">
  <div class="container">
  <main class="index">
  <% @shelters.each do |shelter| %>
    <section>
      <h1><%= link_to("#{shelter.name}", "/shelters/#{shelter.id}") %></h1>
      <%= link_to("Update Shelter", "/shelters/#{shelter.id}/edit") %>
      <%= link_to("Delete Shelter", "/shelters/#{shelter.id}", method: :delete) %>
      <% end %>
    </section>
    <footer>
    <%= link_to("New Shelter", "/shelters/new") %>
    </footer>
  </main>
</div>
