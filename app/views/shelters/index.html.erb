<html lang="en">
  <div class="container">
    <nav class="navbar">
    <%= link_to("Home Page", "/") %>
    <%= link_to("Pet Index", "/pets") %>
    <%= link_to("Shelter Index", "/shelters") %>
    <%= link_to("New Shelter", "/shelters/new") %>
  </nav>
  <main class="index">
  <% @shelters.each do |shelter| %>
    <section>
      <h1><%= link_to("#{shelter.name}", "/shelters/#{shelter.id}") %></h1>
      <%= link_to("Update Shelter", "/shelters/#{shelter.id}/edit") %>
      <%= link_to("Delete Shelter", "/shelters/#{shelter.id}", method: :delete) %>
      <% end %>
    </section>
  </main>
</div>
