<html lang="en">
<div class="container">
  <header>
    <h1>All Pets at <%= link_to(@shelter.name, "/shelters/#{@shelter.id}") %>:</h1>
    <%= link_to("Create Pet", "/shelters/#{@shelter.id}/pets/new") %>
  </header>
  <main class="index">
    <% @shelter.pets.each do |pet| %>
    <section class="<%= "#{pet.name.downcase}" %>-section">
      <%= image_tag(pet.image, alt: "#{pet.name}'s photo.", id: "#{pet.name.downcase}-image") %>
      <h2>Name: <%= link_to(pet.name, "/pets/#{pet.id}") %></h2>
      <%= tag.p "Age: #{pet.approximate_age}" %>
      <%= tag.p "Sex: #{pet.sex}" %>
      <%= link_to("Update Pet", "/pets/#{pet.id}/edit") %>
      <%= link_to("Delete Pet", "/pets/#{pet.id}", method: :delete) unless pet.has_approved_app? %>
    </section>
    <% end %>
  </main>
</div>
